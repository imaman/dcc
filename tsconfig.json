{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "declaration": true,
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "checkJs": false,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
